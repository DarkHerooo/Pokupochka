<Page x:Class="WPFAgentLib.View.AgentMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgentMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="GrButtons">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Договоры" Name="BtnContracts" Click="BtnContracts_Click"/>
            <Button Grid.Column="1" Content="Заявки" Name="BtnRequests" Click="BtnRequests_Click"/>
        </Grid>

        <Rectangle Grid.Row="1" Fill="Black"/>

        <Frame Grid.Row="2" NavigationUIVisibility="Automatic" Name="FrmMain"/>
    </Grid>

</Page>
