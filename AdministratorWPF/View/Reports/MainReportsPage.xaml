<Page x:Class="AdministratorWPF.View.Reports.MainReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainReportsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Name="SpButtons">
            <Button Content="Прибыль"
                    Name="BtnMoney" Click="BtnMoney_Click"/>
            <Button Content="Товары"
                    Name="BtnProducts" Click="BtnProducts_Click"/>
            <Button Content="Агенты"
                    Name="BtnAgents" Click="BtnAgents_Click"/>
            <Button Content="Поставщики" 
                    Name="BtnSuppliers" Click="BtnSuppliers_Click"/>
            <Button Content="Клиенты" 
                    Name="BtnClients" Click="BtnClients_Click"/>
        </StackPanel>

        <Rectangle Grid.Column="1" Fill="Black"/>

        <Frame Grid.Column="2" Margin="5" Name="FrmMain"/>
    </Grid>
</Page>
