<Window x:Class="AdministratorWPF.View.Tables.CntrpartiesWorkWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Добавление или изменение контрагента" Height="500" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Данные о контрагенте" FontSize="25" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                   Name="TbContragentData"/>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Width="128" Margin="5">
                <Image Height="128" Width="128" Name="ImgCompany" Source="{Binding Image}"/>
                <Button Content="Выбрать фотографию" Margin="0, 5, 0, 0" Style="{StaticResource YellowButton}"
                        FontSize="10"
                        Height="30" Name="BtnSelectImg" Click="BtnSelectImg_Click"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                    <Run Text="*" Foreground="Red"/>
                    <Run Text="Компания:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbCompany" Text="{Binding Company}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Адрес:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbAddress" Text="{Binding Address}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Фамилия:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbSecondName" Text="{Binding SecondName}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Имя:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbFirstName" Text="{Binding FirstName}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}"
                       Text="Отчество:"/>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbPatronymic" Text="{Binding Patronymic}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Телефон:"/>
                    </TextBlock>

                    <toolkit:MaskedTextBox Grid.Column="1" Style="{StaticResource MTbData}" Margin="5"
                     MaxLength="11" Name="TbPhone" Mask="+0 (000) 000 00 00" Text="{Binding Phone}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Почта:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbEmail" Text="{Binding Email}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Логин:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbLogin"  Text="{Binding User.Login}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource TblData}">
                <Run Text="*" Foreground="Red"/>
                <Run Text="Пароль:"/>
                    </TextBlock>

                    <TextBox Grid.Column="1" Style="{StaticResource TbData}" Margin="5"
                     Name="TbPassword"  Text="{Binding User.Password}"/>
                </Grid>

                <Button Grid.Column="1" Grid.Row="9" Margin="5" Style="{StaticResource GreenButton}" Content="Сохранить или изменить"
                Name="BtnAddOrChange" Click="BtnAddOrChange_Click"/>
            </Grid>
        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="0" Text="Договоры" FontSize="25" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid Grid.Column="1" Grid.Row="1" Margin="5" Name="DgContracts">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                                <TextBlock FontSize="20">
                                    <Run Text="Договор№" FontWeight="Bold"/>
                                    <Run Text="{Binding Number}"/>
                                </TextBlock>

                                <TextBlock FontSize="15">
                                    <Run Text="Дата начала:" FontWeight="Bold"/>
                                    <Run Text="{Binding DateStart}"/>
                                </TextBlock>

                                <TextBlock FontSize="15">
                                    <Run Text="Дата окончания:" FontWeight="Bold"/>
                                    <Run Text="{Binding DateOver}"/>
                                </TextBlock>

                                <TextBlock FontSize="15">
                                    <Run Text="Количество товаров:" FontWeight="Bold"/>
                                    <Run Text="{Binding Products.Count, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock FontSize="15">
                                    <Run Text="Статус:" FontWeight="Bold"/>
                                    <Run Text="{Binding Status.Title}" Foreground="{Binding Status.Color}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
