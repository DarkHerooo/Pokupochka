<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonTemplate" TargetType="Button">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource ButtonTemplate}">
        <Setter Property="Background" Value="IndianRed"/>
    </Style>

    <Style x:Key="YellowButton" TargetType="Button" BasedOn="{StaticResource ButtonTemplate}">
        <Setter Property="Background" Value="Yellow"/>
    </Style>

    <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ButtonTemplate}">
        <Setter Property="Background" Value="GreenYellow"/>
    </Style>

    <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource ButtonTemplate}">
        <Setter Property="Background" Value="SkyBlue"/>
    </Style>
</ResourceDictionary>