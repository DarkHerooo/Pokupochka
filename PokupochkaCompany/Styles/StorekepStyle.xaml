<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowBackground">
        <Setter Property="ItemsControl.Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF73B4E6" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        <Setter Property="Background" Value="#FF83ABEC"/>
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style x:Key="SelectButtonStyle" TargetType="Button">
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        <Setter Property="Background" Value="#FF418BED"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="50"/>
    </Style>
</ResourceDictionary>