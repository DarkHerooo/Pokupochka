<Page x:Class="PokupochkaCompany.Modules.Storekeeper.AcceptRequests.AccRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokupochkaCompany.Modules.Storekeeper.AcceptRequests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccRequestsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Name="SpButtons">
            <Button Grid.Column="0" Content="Заявки клиентов"
                    Name="BtnCliReq" Click="BtnCliReq_Click"/>
            <Button Grid.Column="1" Content="Заявки поставщиков"
                    Name="BtnSuppReq" Click="BtnSuppReq_Click"/>
        </StackPanel>

        <Rectangle Grid.Column="1" Fill="Black"/>

        <Frame Grid.Column="2" Margin="5" Name="FrmMain"/>
    </Grid>
</Page>
