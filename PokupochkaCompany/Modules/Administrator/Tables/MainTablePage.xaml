<Page x:Class="PokupochkaCompany.Modules.Administrator.Tables.MainTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokupochkaCompany.Modules.Administrator.Tables"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainTablePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Name="SpButtons">
            <Button Content="Роли"
                    Name="BtnRoles" Click="BtnRoles_Click"/>
            <Button Content="Работники"
                    Name="BtnUsers" Click="BtnUsers_Click"/>
            <Button Content="Клиенты" Name="BtnClients"
                    Click="BtnClients_Click"/>
            <Button Content="Поставщики" Name="BtnSuppliers"
                    Click="BtnSuppliers_Click"/>
        </StackPanel>

        <Rectangle Grid.Column="1" Fill="Black"/>

        <Frame Grid.Column="2" Margin="5" Name="FrmMain"/>
    </Grid>
</Page>
